# Spring Profile (dev, prod, test)
SPRING_PROFILE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ppsdb
DB_USERNAME=ppsuser
DB_PASSWORD=your_secure_password_here

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Gateway - Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_API_URL=https://api.paystack.co

# Payment Gateway - Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key_here
FLUTTERWAVE_API_URL=https://api.flutterwave.com/v3

# Merchant API Key (for internal apps to authenticate)
MERCHANT_API_KEY=your_merchant_api_secret_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Rate Limiting
RATE_LIMIT_REQUESTS=10

# Server Configuration
SERVER_PORT=8080

# Logging
LOG_FILE_PATH=./logs/pps.log
APP_LOG_LEVEL=INFO
WEB_LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
KAFKA_LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN
SQL_BIND_LOG_LEVEL=WARN

# Actuator Health Details (never, when-authorized, always)
HEALTH_DETAILS=when-authorized

# Hibernate DDL (validate, update, create, create-drop)
DDL_AUTO=validate

# Show SQL queries (true/false)
SHOW_SQL=false